<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <% if(errorMessage) {%>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= errorMessage %>
             </div>
    <% } %>
    <form class="login-form" action="/reset/resetPassword" method="POST" >
        <div class="col-sm-6">
            <label for="inputPassword4" class="form-label">New Password</label>
            <input type="password" class="form-control" id="inputPassword4" name = "password">

            <label for="inputPassword4" class="form-label">Confirm New Password</label>
            <input type="password" class="form-control" id="inputPassword4" name = "confirmPassword">
            <div class="login-btn">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-outline-dark" type="submit">Change Password</button>
            </div>
        </div>
       
    </form>
<%- include('../includes/end.ejs')%>